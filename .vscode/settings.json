{
  "files.associations": {
    ".gitignore": "ignore",

    ".env": "text",
    ".env.example": "text",

    ".markdownlintignore": "ignore",
    ".markdownlintrc": "json",

    ".prettierignore": "ignore",
    ".prettierc": "json",

    ".eslintignore": "ignore",
    ".eslintrc": "json",

    ".lintstagedrc": "json",

    ".snyk": "yaml",
    ".imgbotconfig": "json"
  },
  "files.exclude": {
    "out": false
  },
  "search.exclude": {
    "out": true
  },
  "typescript.tsc.autoDetect": "off",
  "markdown.extension.toc.levels": "1..3",
  "markdown.extension.toc.updateOnSave": true
}
