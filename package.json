{
  "name": "h4i-extension-pack",
  "publisher": "hack4impact",
  "displayName": "Hack4Impact's Recommended Extensions",
  "description": "Hack4Impact's Recommended Extensions for Quality Project Development",
  "version": "0.0.1",
  "main": "./dist/extension.js",
  "icon": "static/hack4impact-icon.png",
  "license": "MIT",
  "author": {
    "name": "Hack4Impact",
    "url": "https://hack4impact.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hack4impact/h4i-extension-pack"
  },
  "categories": [
    "Extension Packs",
    "Linters",
    "Formatters"
  ],
  "bugs": {
    "url": "https://github.com/hack4impact/h4i-extension-pack/issues"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "extensionPack": [
    "esbenp.prettier-vscode",
    "dbaeumer.vscode-eslint",
    "DavidAnson.vscode-markdownlint",
    "eamodio.gitlens"
  ],
  "activationEvents": [
    "onCommand:hack4impact.createESLintConfigFile",
    "onCommand:hack4impact.createPrettierConfigFile"
  ],
  "contributes": {
    "commands": [
      {
        "command": "hack4impact.createESLintConfigFile",
        "title": "Hack4Impact: Create ESLint Configuration File"
      },
      {
        "command": "hack4impact.createPrettierConfigFile",
        "title": "Hack4Impact: Create Prettier Configuration File"
      }
    ]
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "preversion": "npm test",
    "version:patch": "npm version patch -m 'v%s'",
    "version:minor": "npm version minor -m 'v%s'",
    "version:major": "npm version major -m 'v%s'",
    "postversion": "git push && git push --follow-tags && npm run recreate-releases",
    "predeploy": "pinst --disable",
    "deploy": "vsce publish",
    "postdeploy": "pinst --enable",
    "lint": "npx lint-check",
    "lint:staged": "lint-staged",
    "compile": "webpack --mode production",
    "start": "webpack --mode development --watch",
    "build": "npm run compile && vsce package",
    "postinstall": "husky install",
    "recreate-releases": "ts-node scripts/recreate-releases.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-typescript": "^7.12.17",
    "@octokit/rest": "^18.2.0",
    "@types/dotenv-safe": "^8.1.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/prettier": "^2.2.1",
    "@types/semver": "^7.3.4",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "dotenv-safe": "^8.2.0",
    "eslint": "^7.20.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "jest-environment-node": "^26.6.2",
    "lint-staged": "^10.5.4",
    "markdownlint-cli": "^0.26.0",
    "pinst": "^2.1.4",
    "prettier": "^2.2.1",
    "semver": "^7.3.4",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "vsce": "^1.85.0",
    "vscode-test": "^1.5.1",
    "webpack": "^5.24.0",
    "webpack-cli": "^4.5.0"
  }
}
